{
  "parser": "babel-eslint",
  "extends": [
    "plugin:flowtype/recommended",
    "plugin:react/recommended",
    "prettier",
    "prettier/flowtype",
    "prettier/react"
  ],
  "plugins": [
    "flowtype",
    "react",
    "prettier"
  ],
  "env": {
    "browser": true,
    "mocha": true,
    "node": true,
    "jest": true
  },
  "rules": {
    "prettier/prettier": ["error", "fb"]
  },
  "parserOptions": {
    "ecmaFeatures": {
      "impliedStrict": true,
      "jsx": true,
      "experimentalObjectRestSpread": true
    },
    "ecmaVersion": 7,
    "sourceType": "module"
  }
}
